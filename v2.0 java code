import java.util.Scanner;
import java.util.SortedMap;

public class fallDamageCalculator {
    public static int mode = 0;
    public static void main(String[] args) {


        System.out.println("----------");
        System.out.println("Fall damage calculator for Minecraft by ohzoneoh :D");
        System.out.println("version: 2.0");
        System.out.println("-");
        System.out.println("Patch notes:");
        System.out.println("-Fixed minor spacing errors");
        System.out.println("-IT WORKS (formula change)");
        System.out.println("-");
        System.out.println("You are free to use this however you want!");
        System.out.println("If you are using this calculator and would like to credit me just credit my Youtube (below)!");
        System.out.println("Thank you for using this calculator!");
        System.out.println("-");
        System.out.println("Youtube: https://www.youtube.com/channel/UCFe06H0q8J7oKoJwqzZDuxQ");
        System.out.println("Minecraft ING: ohzoneoh");
        System.out.println("-");
        System.out.println("Download: [not yet (look to my yt for possible download in the future)]");
        System.out.println("----------");



        while (true){
            if (mode == 0){
                SelMode();
            }else if (mode == 1){
                BTD();

            }else if (mode == 2){
                DTB();

            }else {
                System.out.println("ERROR - INVALID MODE NUMBER");
            }
        }
    }

    public static void SelMode(){
        Scanner entermode;
        entermode = new Scanner(System.in);
        String getmode;

        System.out.println("----------");
        System.out.println("Please enter a mode:");
        System.out.println("1. Blocks to damage");
        System.out.println("2. Damage to blocks");

        getmode = entermode.nextLine();

        if (getmode.equals("1")){
            mode = 1;
            System.out.println("You have selected \"Blocks to damage\" ");
        } else if (getmode.equals("2")){
            mode = 2;
            System.out.println("You have selected \"Damage to blocks\" ");
        } else{
            System.out.println("|INVALID ENTERY|");
        }

        System.out.println("----------");

    }

    public static void BTD() {
        Scanner enterblocks;
        enterblocks = new Scanner(System.in);
        double blocks;

        System.out.println("----------");
        System.out.println("Enter a number of blocks");

        blocks = enterblocks.nextDouble();

        System.out.println("Calculating...");

        double hearts = (blocks * 0.5) - 1.5;

        System.out.println("You will take " + hearts + " Hearts of damage from a " + blocks + " block fall!");

        mode = 0;
    }

    public static void DTB() {
        Scanner enterhearts;
        enterhearts = new Scanner(System.in);
        double hearts;

        System.out.println("----------");
        System.out.println("Enter a number of hearts");

        hearts = enterhearts.nextDouble();

        System.out.println("Calculating...");

        double blocks = (hearts + 1.5) / 0.5;

        System.out.println("It will take " + blocks + " blocks to take " + hearts + " hearts of damage!");

        mode = 0;
    }
}
